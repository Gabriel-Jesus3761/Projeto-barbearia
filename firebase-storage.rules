rules_version = '2';

// Regras de segurança para Firebase Storage
service firebase.storage {
  match /b/{bucket}/o {

    // Regras para imagens de estabelecimentos
    match /businesses/{businessId}/{allPaths=**} {
      // Permitir leitura pública de todas as imagens
      allow read: if true;

      // Permitir escrita e exclusão para usuários autenticados
      // (validação de propriedade será feita no código da aplicação)
      allow write, delete: if request.auth != null;
    }

    // Regras para fotos de perfil de usuários
    match /users/{userId}/{allPaths=**} {
      // Permitir leitura pública
      allow read: if true;

      // Permitir escrita apenas para o próprio usuário
      allow write: if request.auth != null &&
                     request.auth.uid == userId;

      // Permitir deletar apenas para o próprio usuário
      allow delete: if request.auth != null &&
                      request.auth.uid == userId;
    }
  }
}
